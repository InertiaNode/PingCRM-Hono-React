    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@vue/server-renderer": "^3.5.0",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.4.1",
    "classnames": "^2.5.1",
    "dotenv": "^17.2.3",
    "hono": "^4.8.5",
    "hono-sessions": "^0.8.0",
    "lucide-react": "^0.544.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-use": "^17.6.0",
    "tailwindcss": "^4.0.0",
    "vue": "^3.5.19"
  },
  "devDependencies": {
