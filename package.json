    "dev:server:debug": "tsx watch --inspect=9231 server/index.ts",
    "start": "node --experimental-transform-types server/index.ts",
    "build": "vite build -c client/vite.config.ts",
    "dev:client": "vite -c client/vite.config.ts",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@inertiajs/react": "^2.2.6",
